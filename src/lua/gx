local loaderFile = "gx_api/gxloader";
local path = shell.resolveProgram(loaderFile)
if path == nil then
    print("Downloading gxloader...")
    if not http then
        print("Error: Http not enabled on server");
        return;
    end


    local githubLink = "https://raw.githubusercontent.com/GnoX/GX-CC/master/src/lua/";

    local response = http.get(githubLink .. loaderFile);

    if (response) then
        local content = response.readAll();
        local file = fs.open(loaderFile, "w");
        response.close();
        if (file) then
            file.write(content);
            file.close();
            print("Download complete, api downloaded to: gx_api/gxloader");
        else
            print("Error: Could not open file.");
        end
    else
        print("Error: File " .. loaderFile .. " could not be downloaded, go look on " .. githubLink .. loaderFile);
    end
end

